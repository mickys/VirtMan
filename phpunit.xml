<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
>
    <testsuites>
        <testsuite name="VirtMan Unit Test Suite">
            <directory suffix=".php">./tests/Unit/VirtMan</directory>
        </testsuite>
        <!--
        <testsuite name="VirtMan Functional Test Suite">
            <directory suffix=".php">./tests/Features/VirtMan</directory>
        </testsuite>
        -->
    </testsuites>
</phpunit>